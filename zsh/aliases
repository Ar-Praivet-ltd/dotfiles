# cd
alias ..='cd ..'
alias hack='cd ~/workspace/ && cd'

# ls
alias ls="ls -F"
alias l="ls"
alias ll="ls -lah"
alias la='ls -A'

#rvm
alias rvmrc-create='rvm --rvmrc --create'
alias rvmrc-reload='. ./.rvmrc'

# editing and reloading aliases
alias reload-aliases='. ~/.dotfiles/zsh/aliases'
alias edit-aliases='vi ~/.dotfiles/zsh/aliases'
alias reload-config='. ~/.dotfiles/zsh/config'
alias edit-config='vi ~/.dotfiles/zsh/config'
alias reload-local='. ~/.localrc'
alias edit-local='vi ~/.localrc'

# git
alias gl='git pull'
alias gp='git push'
alias gd='git diff'
alias gdc='git diff --cached'
alias gc='git commit'
alias gca='git commit -a'
alias gcam='git commit -am'
alias gco='git checkout'
alias gb='git branch'
alias gs='git status'
alias gaa='git add . && git add . -u && gs'
alias gaad='git add . && git add . -u && gdc'
alias grm="git status | grep deleted | awk '{print \$3}' | xargs git rm"
alias gdfstat="git diff-files --stat"
alias changelog='git log `git log -1 --format=%H -- CHANGELOG*`..; cat CHANGELOG*'
alias git='hub' #make sure to brew install hub
alias gpdm='git push demo master'
alias gppm='git push production master'
alias gpa='git push &&'

# rails
alias ss='script/server'
alias sg='script/generate'
alias a='autotest -rails'
alias tlog='tail -f log/development.log'
alias scaffold='script/generate nifty_scaffold'
alias migrate='rake db:migrate db:test:clone'
alias rst='touch tmp/restart.txt'
alias bi='bundle install'
alias respork='touch config/application.rb'
alias guard='guard' #weird zsh autocorrect issue

# alias vi to vim
alias vi=vim
alias virc='vim ~/.vimrc'

# commands starting with % for pasting from web
alias %=' '
alias $=' ' #and from bash

# mongodb
alias ms='mongod --dbpath /tmp/mongo/data/'

# osx
alias myip='ifconfig | egrep "([0-9]+)\.([0-9]+)\.([0-9]+)\.([0-9]+)"'
